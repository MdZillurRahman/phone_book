<h1>Editing contact</h1>

<%= render "form", contact: @contact %>

<br>

<div class="d-flex align-items-center gap-2">
  <%= link_to "Show this contact", @contact, class:"btn btn-secondary" %>
  <%= button_to "Delete", @contact, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:'btn btn-danger' %>
  <%= link_to "Back to contacts", contacts_path, class:"btn btn-dark" %>
</div>
