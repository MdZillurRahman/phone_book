<section class="w-50 mx-auto card">
<div class="card-header">
  <h2>Sign up</h2>
</div>

<div class="card-body"> 
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-100 p-1 rounded" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"w-100 p-1 rounded" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-100 p-1 rounded" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-primary my-3 w-100" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

</section>